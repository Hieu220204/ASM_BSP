@model ASM_APDP.Models.Student

@{
    Layout = "_Layout";
}

<h2>Update Profile</h2>

<form method="post">
    <div>
        <label>Full Name:</label>
        <input type="text" name="FullName" value="@Model.FullName" required />
    </div>
    <div>
        <label>Email:</label>
        <input type="email" name="Email" value="@Model.Email" readonly />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="Password" value="@Model.Password" required />
    </div>
    <div>
        <label>Phone Number:</label>
        <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" required />
    </div>
    <div>
        <label>Date of Birth (DOB):</label>
        <input type="date" name="DOB" value="@Model.DOB" required />
    </div>
    <div>
        <label>Address:</label>
        <input type="text" name="Address" value="@Model.Address" required />
    </div>
    <div>
        <button type="submit">Update Profile</button>
    </div>
</form>

@if (ViewBag.Message != null)
{
    <div>@ViewBag.Message</div>
}
